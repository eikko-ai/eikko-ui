{
  "name": "@kai/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Kai UI component library",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@tailwindcss",
      "**/@tailwindcss/**",
      "**/twin.macro",
      "**/postcss"
    ]
  },
  "scripts": {
    "clean": "rimraf node_modules",
    "build": "cd packages/components && npm run build",
    "dev": "cd packages/components && npm run watch & cd packages/playground && npm run start",
    "lint": "eslint . --ignore-path ./.gitignore",
    "lint:fix": "eslint . --fix --ignore-path ./.gitignore",
    "generate:component": "cd packages/scripts && npm run generate:component"
  },
  "keywords": [
    "eikko",
    "ui",
    "components",
    "react",
    "tailwindcss"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eikko-ai/kai.git"
  },
  "bugs": {
    "url": "https://github.com/eikko-ai/kai/issues"
  },
  "homepage": "https://github.com/eikko-ai/kai#readme",
  "author": "Nuno Freire <nuno.freire@eikko.ai>",
  "license": "MIT",
  "resolutions": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.17",
    "@babel/runtime": "^7.12.18",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/node": "^14.14.30",
    "@types/react-dom": "^17.0.1",
    "@types/react": "^17.0.2",
    "@types/styled-components": "^5.1.7",
    "babel-plugin-macros": "^3.0.1",
    "core-js": "^3.9.0",
    "postcss": "^8.2.2",
    "rimraf": "^3.0.2",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup": "^2.39.0",
    "typescript": "^4.1.5"
  }
}
