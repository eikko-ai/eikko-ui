{
  "name": "@kai/monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Kai UI component library",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@tailwindcss",
      "**/@tailwindcss/**"
    ]
  },
  "scripts": {
    "clean": "rimraf node_modules",
    "build:ui": "cd packages/ui && npm run build",
    "build:docs": "cd packages/docs && npm run build",
    "dev": "cd packages/ui && npm run dev & cd packages/docs && npm run dev"
  },
  "keywords": [
    "eikko",
    "ui",
    "components",
    "react",
    "preact",
    "tailwindcss"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eikko-ai/kai.git"
  },
  "bugs": {
    "url": "https://github.com/eikko-ai/kai/issues"
  },
  "homepage": "https://github.com/eikko-ai/kai#readme",
  "author": "Nuno Freire <nuno.freire@eikko.ai>",
  "license": "MIT",
  "devDependencies": {
    "prettier": "2.1.2",
    "rimraf": "3.0.2"
  },
  "dependencies": {
    "preact-iso": "^0.2.0",
    "wmr": "^1.0.0"
  }
}
