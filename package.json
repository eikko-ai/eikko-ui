{
  "name": "@kai/monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Kai UI component library",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@tailwindcss",
      "**/@tailwindcss/**",
      "**/twin.macro",
      "**/postcss",
      "**/postcss-**"
    ]
  },
  "scripts": {
    "clean": "rimraf node_modules",
    "build": "cd packages/components && npm run build",
    "dev": "cd packages/components && npm run watch & cd packages/playground && npm run start",
    "lint": "eslint . --ignore-path ./.gitignore",
    "lint:fix": "eslint . --fix --ignore-path ./.gitignore",
    "generate": "node ./scripts/generators/create-component"
  },
  "keywords": [
    "eikko",
    "ui",
    "components",
    "react",
    "tailwindcss"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eikko-ai/kai.git"
  },
  "bugs": {
    "url": "https://github.com/eikko-ai/kai/issues"
  },
  "homepage": "https://github.com/eikko-ai/kai#readme",
  "author": "Nuno Freire <nuno.freire@eikko.ai>",
  "license": "MIT",
  "resolutions": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "rimraf": "3.0.2"
  }
}
