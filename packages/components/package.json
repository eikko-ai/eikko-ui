{
  "name": "@kai/components",
  "private": true,
  "version": "1.0.0",
  "description": "Kai UI component library",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "babelMacros": {
    "twin": {
      "config": "./tailwind.config.js",
      "preset": "styled-components"
    }
  },
  "scripts": {
    "clean": "rimraf node_modules dist",
    "build:ts": "tsc",
    "build:js": "BUILD=production rollup -c",
    "build": "npm run build:ts && npm run build:js",
    "watch:ts": "tsc --watch",
    "watch:js": "rollup -c --watch",
    "watch": "npm run watch:ts & npm run watch:js",
    "storybook": "start-storybook -p 6060",
    "storybook:export": "build-storybook",
    "lint": "eslint . --ignore-path ./.gitignore",
    "lint:fix": "eslint . --fix --ignore-path ./.gitignore",
    "format": "prettier --write \"**/*.{js,jsx,ts, tsx,json,md}\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ui",
    "eikko",
    "components",
    "tailwindcss",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eikko-ai/kai.git"
  },
  "bugs": {
    "url": "https://github.com/eikko-ai/kai/issues"
  },
  "author": "Nuno Freire <nuno.freire@eikko.ai>",
  "homepage": "https://github.com/eikko-ai/kai#readme",
  "license": "MIT",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "postcss": "^8.2.6"
  },
  "dependencies": {
    "styled-components": "^5.2.1",
    "tailwindcss": "^2.0.3",
    "twin.macro": "^2.2.3"
  }
}
